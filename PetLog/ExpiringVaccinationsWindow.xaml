<Window x:Class="PetLog.ExpiringVaccinationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetLog"
        mc:Ignorable="d"
        Title="ExpiringVaccinationsWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ExpiringVaccinationsDataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Imię" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Data szczepienia" Binding="{Binding VaccinationDate}"/>
                <DataGridTextColumn Header="Data wygaśnięcia szczepienia" Binding="{Binding ExpireDate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
